<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/label_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:id="@+id/name_title"
        android:background="@color/type_message_light"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_sim_white"/>
        </LinearLayout>


    <LinearLayout
        android:layout_below="@id/name_title"
        android:id="@+id/name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/subtitle"
            android:textColor="@color/medium_grey"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="@string/endless_scrolling_description"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|bottom"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@android:color/holo_red_light"
            android:maxLines="2"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            tools:text="View Account"/>


    </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>